<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="boxStrokeColor">@color/onBackground</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Title" parent="@style/AppTheme">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:padding">@dimen/size_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>


    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/size_large</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_large</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_large</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_large</item>
        <item name="boxStrokeWidth">3dp</item>
    </style>

    <style name="Description" parent="@style/AppTheme">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:padding">@dimen/size_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onBackgroundSecondary</item>
    </style>

    <style name="PrimaryButton" parent="@style/AppTheme">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:padding">@dimen/size_small</item>
        <item name="android:textAllCaps">@dimen/size_small</item>
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="SecondaryButton" parent="@style/PrimaryButton">
        <item name="android:background">@drawable/background_button_secondary</item>
    </style>


</resources>
